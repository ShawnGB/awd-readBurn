{
  "name": "express-typescript-template",
  "version": "1.0.0",
  "description": "Minimal TypeScript Express.js starter template",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:css && tsc",
    "build:css": "npx tailwindcss -i ./src/styles/input.css -o ./public/styles/output.css --minify",
    "watch:css": "npx tailwindcss -i ./src/styles/input.css -o ./public/styles/output.css --watch",
    "start": "npm run build && node ./dist/index.js",
    "dev": "concurrently \"npm run watch:css\" \"nodemon\""
  },
  "dependencies": {
    "@types/nunjucks": "^3.2.6",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "nunjucks": "^3.2.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.9.2",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
